{
  "name": "lxd-manager-frontend",
  "version": "1.1.0",
  "private": true,
  "description": "Frontend application for the lxd-manager backend",
  "repository": "github:lxd-manager/frontend",
  "author": "ech0 <mail@ech0.de> (https://ech0.de)",
  "contributors": [
    "ech0 <mail@ech0.de> (https://ech0.de)",
    "Felix Engelmann <fe-github@nlogn.org> (https://nlogn.org)"
  ],
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@mdi/font": "^4.9.95",
    "axios": "^0.21.1",
    "marked": "^4.0.10",
    "vue": "^2.6.14",
    "vue-router": "^3.4.9",
    "vuetify": "^2.6.6"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/eslint-parser": "^7.18.2",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/eslint-config-airbnb": "^7.0.0",
    "lint-staged": "^10.5.3",
    "node-http-proxy-json": "^0.1.9",
    "sass": "<1.33.0",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-vuetify": "~2.4.5",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/eslint-config-airbnb"
    ],
    "rules": {
      "no-param-reassign": 0,
      "vue/multi-word-component-names": 0,
      "comma-dangle": [
        "error",
        "never"
      ],
      "vue/max-len": [ 2, {
          "code": 150
      }],
      "max-len": [
        2,
        {
          "code": 150
        }
      ]
    },
    "parserOptions": {
      "parser": "@babel/eslint-parser"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".vue"
          ]
        }
      }
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
